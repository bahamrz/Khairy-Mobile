<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="30dp"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="إسم المستخدم "
        android:id="@+id/username"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="البريد الإلكتروني"
        android:id="@+id/signupemail"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="الرمز السري"
        android:id="@+id/password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تأكيد الرمز السري"
        android:id="@+id/confirmpassword"
        />
    <CheckBox
        android:textColor="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أوافق على شروط الإستخدام والخصوصية"
        />
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تسجيل الحساب"
        android:onClick="login"
        android:background="#11CFC5"
        android:textColor="#f8f8ff"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/login"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هل أنت مستخدم بالفعل؟ تسجيل الدخول"
        android:textStyle="italic"
        android:textSize="13sp"
        android:textColor="#E91E63"
        />
</LinearLayout>